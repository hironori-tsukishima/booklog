.wrapper
  = render partial: "layouts/header"
  = render partial: 'layouts/side_bar'
  .mainNew
    .mainNewHader
      .mainNewTrash
        = fa_icon 'trash-o 2x', class: 'icon'
      .mainNewClip
        = fa_icon 'paperclip 2x', class: 'icon'
      .mainNewEdit
        = fa_icon 'pencil 2x', class: 'icon'
      .mainNewSave
        = fa_icon 'save 2x', class: 'icon'
      %input.mainNewTitle{type:"text" ,placeholder:"タイトルを入力してください",autofocus:true}
    .mainNewBody
      %textarea.mainNewSummary{placeholder:"要約を入力してください"}
      %textarea.mainNewText{placeholder:"本文を入力してください"}
